<div class="flex w-full">
  <h1 class=" mt-24 text-7xl text-center mx-auto">Articles</h1>
</div>

<div class="mt-6 flex w-full">
  <p class="text-center mx-auto">Our blog has <%= Article.public_count %> articles and counting!</p>
</div>

<div class="mt-24 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-4 mx-auto max-w-7xl">
  <% @articles.each do |article| %>
    <%= link_to article_path(article) do %>
      <div class="bg-gray-200 p-4 cursor-pointer">
        <h2 class="text-xl font-bold mb-2"><%= article.title %></h2>
        <p><%= article.body %></p>
      </div>
    <% end %>
  <% end %>
</div>

<button class="flex my-10 mx-auto bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
  <%= link_to "New Article", new_article_path, class: " text-center" %>
</button>

